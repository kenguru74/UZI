; Штурмовая винтовка (автомат) Heckler-Koch G36
;----------------------------------------------
;Первый раздел
;Здесь хранится общая информация о оружии - его класс, тип, ссылки на спавн и т.д.
[wpn_g36]:identity_immunities
GroupControlSection			= spawn_group
discovery_dependency		= 
$spawn              		= "weapons\g36"		; имя и секция в левел эдиторе
$npc						= on				; опция для левел эдитора
$prefetch 					= 8
scheduled					= off				; option for ALife Simulator
cform               		= skeleton
class               		= WP_AK74
min_radius          		= 10
max_radius          		= 200
description			        = enc_weapons1_wpn-g36 ;ссылка на string_id, из которого игра подгружает описание этого оружия
launch_speed				= 0
ef_main_weapon_type			= 2 ;основной тип, к которому принадлежит оружие 
ef_weapon_type				= 6 ;подтип, к которому принадлежит оружие

;Второй раздел
;Содержит модификаторы, которые даются к углу зрения/дальности обзора NPC, держащего это оружие в руках: 
;-----------------------------------------------------------------------------------
holder_range_modifier	= 1.5		       ; во сколько раз увеличивается дальность обзора 
holder_fov_modifier		= 1.0              ; во сколько раз увеличивается угол обзора
;-----------------------------------------------------------------------------------

;Третий раздел
;Содержит данные о самом оружии, его некоторых характеристиках: 

cost						= 18000                               ;базовая цена (торговцы умножают её на некоторый коэффициент)
weapon_class				= assault_rifle	                      ;класс оружия (здесь - штурмовая винтовка) 

ammo_elapsed				= 30
ammo_mag_size				= 30                                  ;размер магазина
ammo_class					= ammo_5.56x45_ss190, ammo_5.56x45_ap ;типы используемых патронов
grenade_class		        = ammo_m209                           ;тип используемых гранат
fire_modes					= 1, -1                               ;режимы ведения огня

hand_dependence				= 1                                   ;засивимость о рук (?) - возможно, речь идет о качании ствола 
single_handed				= 0	                                  ;держится ли только в одной руке

slot 						= 2	                                  ;слот в инвентаре
animation_slot				= 2		                              ;вид анимации (для пистолета/для винтовки)

inv_name	        		= wpn-g36                             ;ссылка на имя, отображаемое в инвентаре
inv_name_short				= wpn-g36                             ;ссылка на имя, отображаемое в инвентаре
inv_weight					= 3.6                                 ;вес

inv_grid_width				= 5                                   ;                          
inv_grid_height				= 2                                   ;координаты
inv_grid_x					= 0                                   ;иконки
inv_grid_y					= 10                                  ;

kill_msg_x					= 157
kill_msg_y					= 29
kill_msg_width				= 78
kill_msg_height				= 31

;Четвертый раздел
;В четвертом разделе хранится информация о износе/отдаче оружия.
;-----------------------------------------------------------------------------------
;базовая дисперсия
fire_dispersion_base		= 0.17 	;базовая дисперсия оружия (без влияния износа) 
control_inertion_factor		= 1.09f ;(похоже, влияет на шкалу "удобство" и на инерцию ствола в руках (скорость наведения на цель)) 
disp_rate 			= 1.9 ;предположительно нарастание рассеивания огня с каждым следующим выстрелом
;отдача
cam_relax_speed         	= 9	;скорость возврата в исходное положение
cam_relax_speed_ai        	= 120.75    ;скорость возврата в исходное положение у АИ
cam_dispersion          	= 0.15		;увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc			= 0.3		;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac			= 0.9		;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle				= 5.0		;максимальный угол отдачи
cam_max_angle_horz			= 9.0		;(degree) maximum shot horizontal degree 
cam_step_angle_horz			= 1.1;1			;(degree) size of step camera moved in horizontal position while shooting

fire_dispersion_condition_factor = 5	;увеличение дисперсии в процентах при максимальном износе 
misfire_probability 			= 0.002	;вероятность осечки при максимальном износе 
condition_shot_dec 			= 0.0001	;увеличение износа при каждом выстреле
misfire_condition_k			= 0.05           ;порог (в данном случае - 30%), после которого оружие может заклинивать 
;-----------------------------------------------------------------------------------
direction              		=  0, 0, 1		;вектор выстрела, обычно направлен по направлению взгляда
fire_point             		=  0.0, 0.21, 0.58	;координаты партиклов огня(в режиме от третьего лица) 
fire_point2            		=  0.0, 0.10, 0.68	;координаты партиклов огня(в режиме от третьего лица)(стрельба при прицеливании) 

;flame_particles			= weapons\generic_weapon05 	;партикл эффект для выстрела
smoke_particles				= weapons\generic_shoot_00 	;партиклы дымка от выстрела
grenade_flame_particles			= weapons\generic_weapon01 	;партиклы огня от взрыва гранаты
	
shell_point		 			= 0.0, 0.21, 0.13  
shell_dir		 			= 0.0, 0.0, 0.4		;оффсет, откуда из оружия будут вылетать гильзы 
shell_particles	 			= weapons\arsenal_shells1	;партиклы гильз

rpm_empty_click 	 		= 200		;частота спуска при пустом магазине

;Пятый раздел
;Здесь хранится множество параметров
PDM_disp_base 				= 1.05		;множитель, на который умножается базовая дисперсия оружия, когда ГГ (Главный Герой) стоит на месте в полный рост; 
PDM_disp_vel_factor 		= 1.3			;множитель, на который умножается базовая дисперсия оружия, когда ГГ крутит оружием или бежит; 
PDM_disp_accel_factor 		= 1.5			;множитель, на который умножается базовая дисперсия оружия, когда ГГ бежит в спринте; 
PDM_crouch	 		= 0.9			;множитель, на который умножается базовая дисперсия оружия, когда ГГ идет пригнувшись; 
PDM_crouch_no_acc 		= 0.7			;множитель, на который умножается базовая дисперсия оружия, когда ГГ стоит на месте, пригнувшись; 

; ttc
hit_power                	= 0.45
hit_impulse		        	= 10			;импульс пули (сила, которую летящая пуля передает жертве, влияет на поведение ragdoll-тела) 
hit_type 					= fire_wound	;тип причиняемых повреждений, в данном случае - пулевые ранения (параметр в синглплеере ни на что не влияет)
hit_rate			= 1.85				;вариативность повреждений (максимальный множитель?)     

fire_distance            	= 200			;эффективная дальность, (после которой пуля исчезает)
bullet_speed				= 920		;начальная скорость пули
rpm                      	= 750			;скорострельность
; end ttc

use_aim_bullet			    = true		;Поддерживается ли первая суппер пуля
time_to_aim					= 1.0	;время прицеливания для срабатывания супер-пули

