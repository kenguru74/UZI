min_start_power = 90
max_start_power = 100
attenuation = 1
period = 1
min_artefact_count = 0
max_artefact_count = 0
artefact_spawn_idle = 24
artefact_spawn_rnd = 0

hit_type = explosion

disable_time = -1 ;время игнорирования неживого объекта в зоне (-1 если не нужно)
