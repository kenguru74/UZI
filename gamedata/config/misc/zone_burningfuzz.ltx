[zone_burning_fuzz]
GroupControlSection = spawn_group_zone
$spawn = "zones\burning fuzz"
$prefetch = 16
class = ZS_BFUZZ
visual = physics\anomaly\topolinypuh
min_speed_to_react = 1.01
ef_anomaly_type = 6
ef_weapon_type = 18

hit_impulse_scale = 0
effective_radius = 50.0 ;0.75 ;размер радиуса в процентах от оригинального, где действует зона
sound = zone_mosquito_bald
postprocess = postprocess_fuzz


artefacts = af_rusty_thorn,0.2, af_rusty_kristall, 0.6, af_rusty_sea-urchin, 0.2
BirthProbability = 0.1

;----------- Anomaly settings -----------------------
min_start_power = 1 ;0.99 ;0.14
max_start_power = 5 ;1.0 ;0.15
attenuation = 1
period = 1
min_artefact_count = 0
max_artefact_count = 1
artefact_spawn_idle = 24
artefact_spawn_rnd = 50 ;вероятность заспавнить артефакт в процентах.


hit_type = chemical_burn

;idle_particles = anomaly2\pux_idle
blowout_particles = anomaly2\pux_blast

idle_small_particles = anomaly2\pux_damage_smoke_01
idle_big_particles = anomaly2\pux_damage_smoke_02

blowout_sound = anomaly\bfuzz_blowout
hit_sound = anomaly\bfuzz_hit

disable_time = 500 ;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small = 500 ;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time = 1000 ;время отключения idle партиклов

awaking_time = 10 ;50
blowout_time = 30 ;1000
accamulate_time = 500 ;5000

throw_in_impulse_alive = 1000

attack_animation_start = 10
attack_animation_end = 100

ignore_nonalive = false;
ignore_small = false;
ignore_artefacts = true

blowout_light = off
idle_light = off

visible_by_detector = on

blowout_wind = off

throw_out_power = 50
artefact_spawn_height = 3

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = on
artefact_spawn_probability = 0.15


