[zone_sphere]
GroupControlSection = spawn_group_zone
$spawn = "zones\sphere"
$prefetch = 16
class = ZS_ICE

hit_impulse_scale = .04
effective_radius = 0.99 ;размер радиуса в процентах от оригинального, где действует зона
sound = zone_mosquito_bald
postprocess = postprocess_electra

ef_anomaly_type = 1
ef_weapon_type = 13

artefacts = af_electra_sparkler,0.7, af_electra_flash, 0.25, af_electra_moonlight, 0.05
BirthProbability = 0.1

;----------- Anomaly settings -----------------------
min_start_power = 1.40
max_start_power = 1.80
attenuation = 1
period = 1
min_artefact_count = 0
max_artefact_count = 1
artefact_spawn_idle = 24
artefact_spawn_rnd = 50 ;веро€тность заспавнить артефакт в процентах.

;idle_particles = anomaly2\generator\anomaly_teleport_00001
blowout_particles = anomaly2\electra2_blast ;gravity_blast_03
tearing_particles =anomaly2\body_tear_00
torn_particles =anomaly2\body_tear_01

hit_small_particles = hit_fx\hit_metal_02
hit_big_particles = anomaly2\gravity_damage_02_blood2
idle_small_particles = anomaly2\electra_damage_01_smoke
idle_big_particles = anomaly2\electra_damage_02_smoke
entrance_small_particles = anomaly2\gravi_anomaly_shield_00
entrance_big_particles = anomaly2\emi_entrance_big_00;

tele_particles_small = anomaly2\gravity_damage_01_smoke ;anomaly2\gravity_damage_01_smoke
tele_particles_big = anomaly2\gravity_damage_02_smoke

idle_sound = anomaly\torrid_idle ;посто€нный звук
blowout_sound = anomaly\electra_blast1; anomaly\gravi_blowout6; anomaly_gravy_blast01 ;во врем€ выброса(удара) в центре аномалии
hit_sound = anomaly\electra_hit; anomaly\anomaly_gravy_hit1 ;на персонаже, когда тот получает хит
body_tearing_sound = anomaly\anomaly_body_tear_1 ;звук разрывани€ трупа
entrance_sound = anomaly\gravi_idle01 ;при попадании объекта в аномалию

blowout_light = on
light_color = 0.8,0.9,1
light_range = 30.0
light_time = 1
light_height = 1.5 ;подъем источника света на высоту

idle_light = off

hit_type = shock

disable_time = 5000 ;врем€ игнорировани€ неживого объекта в зоне (-1 если не нужно)
disable_time_small = 500 ;врем€ игнорировани€ маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time = 100 ;врем€ отключени€ idle партиклов

awaking_time = 200
blowout_time = 1500
accamulate_time = 1000

ignore_nonalive = false
ignore_small = true
ignore_artefacts = true

;параметры телекинеза дл€ зоны
throw_in_impulse = 5000 ;сила импульса вт€гивани€ (дл€ тела 100кг)
throw_out_impulse = 900 ;сила выбрасывани€ взрывом
throw_in_impulse_alive = 800 ;сила импульса вт€гивани€ дл€ живых
throw_in_atten = 6 ;коэфф. зат€гивани€ (чем меньше, тем плавнее зат€гивает)
blowout_radius_percent = 0.9 ;радиус (в процентах от всего радиуса) непосредственно выброса
actor_blowout_radius_percent = 0.5

tele_height = 0.1 ;высота подъема телекинеза
time_to_tele = 5000 ;врем€ деражани€ объекта в воздухе
tele_pause = 5000 ;пауза перед тем как снова подн€ть упавший объект

visible_by_detector = on

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;ветер
blowout_wind = on

blowout_wind_time_start = 0
blowout_wind_time_peak = 1500
blowout_wind_time_end = 2990
blowout_wind_power = 0.5 ;сила поднимаего ветра (от 0 до 1), в момент blowout_wind_time_peak

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
