[logic]
active = walker
on_death = death

[walker]
path_walk = road2_walk
path_look = road2_look
on_info = {+zaton_dialog_road} walker@road
meet = meet@road

[walker@road]
path_walk = road2_walk
path_look = road2_look
on_actor_dist_ge_nvis = 10 | walker@road_to_kranes
meet = meet@road

[walker@road_to_kranes]
path_walk = road4_walk
meet = no_meet
on_timer = 5000| %=zat_koster_road_off%
on_signal = zat_home2| walker@house %+zat_kran_stalker2%

[walker@house]
path_walk = road6_walk
path_look = road6_look
meet = no_meet
on_info = {+zat_bloodsucker_death} walker@kranes

[walker@kranes]
path_walk = road8_walk
meet = no_meet
on_signal = zat_kranes2| kamp@kranes

[kamp@kranes]
center_point  = kran_camp_center
path_walk = kran_camp_center_task
on_timer = 5000| kamp@kranes2 %=zat_koster_kran_on%

[kamp@kranes2]
center_point  = kran_camp_center
path_walk = kran_camp_center_task
meet = meet@kran
on_info = {-jo_quest_fail +zaton_dialog_kran} %=actor_friend%

[meet@road]
victim		= 5|actor
victim_wpn		= 5|actor
use			= true
use_wpn		= false
meet_dialog = zaton_road_talk

[meet@kran]
victim		= 5|actor
victim_wpn		= 5|actor
use			= true
use_wpn		= false
meet_dialog = zaton_kran_talk

[death]
on_info = %+jo_quest_fail%