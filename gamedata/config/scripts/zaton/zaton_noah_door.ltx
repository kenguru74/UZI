[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
show_tips = false
on_info = {+noah_door_open} ph_door@unlocked, {-noah_door_open} ph_door@locked

[ph_door@unlocked]
closed = false
locked = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
show_tips = false
on_info = {-noah_door_open} ph_door@locked, {+noah_door_open} ph_door@unlocked