function spawn_gpistol()
 amk.g_start_timer("gpis",0, 0, 1)
end

function gpistol_have(task, objective)
   if db.actor ~= nil and db.actor:object("wpn_gungauss") ~= nil then
       local robj = alife():object("jupiter_bet_vanna")
       if robj then
         level.map_remove_object_spot(robj.id, "uzi_spot_max")
       end
       return true
   end
   return false
end