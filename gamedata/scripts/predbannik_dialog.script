--'  Квест Скупого на ФН2000
function weapon_have(task, objective)
   if db.actor ~= nil then
      return db.actor:object("wpn_fn2000u") ~= nil
   end
   return false
end

function weapon_bring(first_speaker, second_speaker)
   dialogs.relocate_item_section(first_speaker, "wpn_fn2000u", "out")
   dialogs.relocate_item_section(first_speaker, "af_gold_fish_u", "in")
   first_speaker:set_relation(game_object.friend, second_speaker)
   db.actor:set_character_rank(db.actor:character_rank() + 120)
end

